@import highlight
.article
  position relative
  .article-entry
    margin: 90px 10% 34px
    width: 50%
    .title
      text-align center
      font-size: 2em
      font-weight blod
      line-height: 2.2em
    .article-info
      margin 0 auto
      width 140px
      .updated:before
        content ' - '
      .login, .updated
        text-align center
        color #888
      .login
        margin-bottom 38px
      .login:hover
        text-decoration underline
  .articles-list
    position absolute
    top 0
    right 10%
    padding 20px
    width 20%
    background #f7f7f7
    border-top 3px solid #4A90E2
    h3
      margin 0
      text-align center
    .article-titles
      display block
      line-height 2.4em
      color #9b9b9b
    .article-titles:hover
      color #000

