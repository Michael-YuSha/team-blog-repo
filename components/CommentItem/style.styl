.comment-item
  position relative
  padding-top 44px
  .avatar
    position absolute
    img
      width 64px
      height 64px
      border-radius 50%
  .comment-info
    position relative
    margin-left 80px
    .time
      position absolute
      top 0
      right 0
    .username
      margin 0
      font-size 22px
      line-height 22px
      color #000
    .text
      margin 0
      padding 20px 0
      font-size 18px
      line-height 30px
      border-bottom 1px solid #d8d8d8
