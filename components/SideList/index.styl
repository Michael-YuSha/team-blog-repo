.articles-list
  position absolute
  top 100px
  right 10%
  padding 20px 0 40px 20px
  width 20%
  height: 500px
  background #f7f7f7
  border-top 3px solid #4A90E2
  h3
    margin 0
    text-align center
    margin-right 20px
    border-bottom 1px solid #f0f0f0
  .titles
    position relative
    height 500px
    overflow hidden
    .has-scrollbar
      position absolute
      top 0
      right -17px
      bottom 0
      left 0
      overflow scroll
      overflow-x hidden
      padding-right 30px
      .article-titles
        display block
        line-height 2.4em
        color #9b9b9b
      .article-titles:hover
        color #000

@media (max-width: 768px)
  .article
    .article-entry
      margin 70px auto
      width: 90%
  .articles-list
    display none
