.articles-list
  position absolute
  top 100px
  right 10%
  padding 20px
  width 20%
  background #f7f7f7
  border-top 3px solid #4A90E2
  h3
    margin 0
    text-align center
  .article-titles
    display block
    line-height 2.4em
    color #9b9b9b
  .article-titles:hover
    color #000

@media (max-width: 768px)
  .article
    .article-entry
      margin 70px auto
      width: 90%
  .articles-list
    display none